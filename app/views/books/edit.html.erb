<h1>Editing Book</h1>

		<% if @book.errors.any? %>
		  <div id="error_explanation">
		  <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
		    <ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>

		<%= form_for(@book) do |f| %>
			<div class="field row">
				<%= f.label :title %>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
			</div>

			<div class="field row">
				<%= f.label :opinion %>
				<%= f.text_area :body, class: "col-xs-12 book_body" %>
			</div>

			<div class="actions row">
				<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
			</div>
		<% end %>

		<%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
		<%= '|' %>
		<%= link_to "Back", books_path, class: "back" %>

	</div>
</div>